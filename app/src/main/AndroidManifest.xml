<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.zli.lk.drinkout">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrinkOut">
        <activity
            android:name=".Activities.ExploededActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.DefusedAcivity"
            android:exported="false" />

        <service
            android:name=".Services.BombService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Activities.TriviaActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.BombActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>